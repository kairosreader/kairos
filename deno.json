{
  "tasks": {
    "start:api": "deno run -A --watch apps/api/main.ts",
    "dev": "deno task start:api & deno task start:processor",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno test -A",
    "test:watch": "deno test -A --watch",
    "test:coverage": "deno test -A --coverage=coverage && deno coverage coverage",
    "compile:api": "deno compile -A --output dist/api apps/api/main.ts",
    "compile:processor": "deno compile -A --output dist/processor apps/content-processor/main.ts"
  },
  "imports": {
    "@/": "./",
    "@api/": "./apps/api/",
    "@web/": "./apps/web/",
    "@core/": "./packages/core/",
    "@infra/": "./packages/infra/",
    "@shared/": "./packages/shared/",
    "@hono/hono": "jsr:@hono/hono@^4.6.9",
    "@hono/swagger-ui": "npm:@hono/swagger-ui@0.4.1",
    "@hono/zod-openapi": "npm:@hono/zod-openapi@0.16.4",
    "@mozilla/readability": "npm:@mozilla/readability@0.5.0",
    "bullmq": "npm:bullmq@5.25.0",
    "hono-pino": "jsr:@maou-shonen/hono-pino@0.5.1",
    "jsdom": "npm:jsdom@25.0.1",
    "reflect-metadata": "npm:reflect-metadata@0.2.2",
    "tsyringe": "npm:tsyringe@4.8.0"
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["deno.ns", "dom"]
  },
  "fmt": {
    "include": ["apps/", "packages/"],
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false
    }
  },
  "lint": {
    "include": ["apps/", "packages/"]
  }
}
