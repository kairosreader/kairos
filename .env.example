# Application
DENO_ENV=production
DOMAIN=http://localhost
API_PORT=80
APP_URL=${DOMAIN}:${API_PORT}
LOG_LEVEL=info

# Database
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=kairos
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Queue
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API
INTERNAL_API_KEY=your-internal-api-key

# Content Processing
MAX_CONTENT_SIZE=10mb
CONTENT_PROCESSING_TIMEOUT=30000

# API Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Mail Configuration
SMTP_HOST=mailslurper
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
SMTP_FROM=no-reply@kairos.local
SMTP_SECURE=true
