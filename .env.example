# Application
DENO_ENV=production
PORT=8000
LOG_LEVEL=info

# Database
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=kairos

# Queue
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d
INTERNAL_API_KEY=your-internal-api-key
API_URL=http://api:8000

# Content Processing
MAX_CONTENT_SIZE=10mb
CONTENT_PROCESSING_TIMEOUT=30000

# API Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Authentication
# Optional: Override these ports if you need to change them
AUTH_PUBLIC_PORT=4433
AUTH_ADMIN_PORT=4434
AUTH_UI_PORT=4455
AUTH_ADMIN_UI_PORT=8080

# Required: Set these URLs for your environment
# Development defaults (local):
AUTH_PUBLIC_URL=http://127.0.0.1:${AUTH_PUBLIC_PORT}
AUTH_ADMIN_URL=http://auth:${AUTH_ADMIN_PORT}
AUTH_UI_URL=http://127.0.0.1:${AUTH_UI_PORT}

# Production example:
# AUTH_PUBLIC_URL=https://auth.yourdomain.com
# AUTH_ADMIN_URL=https://auth-admin.yourdomain.com
# AUTH_UI_URL=https://account.yourdomain.com

# Mail Configuration
SMTP_HOST=mailslurper
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
SMTP_FROM=no-reply@kairos.local
SMTP_SECURE=false
