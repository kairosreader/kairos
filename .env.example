# Application
DENO_ENV=production
PORT=8000
LOG_LEVEL=info

# Database
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=kairos

# Queue
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# Content Processing
MAX_CONTENT_SIZE=10mb
CONTENT_PROCESSING_TIMEOUT=30000

# API Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
